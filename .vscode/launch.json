{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Benchmark",
			"request": "launch",
			"runtimeArgs": [
				"run-script",
				"benchmark"
			],
			"runtimeExecutable": "npm",
			"skipFiles": [
				"<node_internals>/**"
			],
			"type": "node"
		},
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"${workspaceFolder}/apps/sim/dl",
				"--extensionDevelopmentPath=${workspaceFolder}/apps/vscodeExtension/"
			],
			"outFiles": [
				"${workspaceFolder}/apps/vscodeExtension/out/**/*.js"
			],
      "preLaunchTask": "npm: build-vscode-extension"
		}
	]
}
